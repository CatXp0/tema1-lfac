<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tema1.MathExpressionEvaluatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label>Introduceti o expresie matematica:</Label>
    <TextField fx:id="inputField" promptText="use ^ for power and sqrt() for square root" />
    <Button fx:id="evaluateButton" text="Evalueaza" onAction="#onEvaluateButtonClick" />
    <Label fx:id="exp4jResultLabel" text="Rezultat Exp4j:" />
    <Label fx:id="shuntingYardAlgResultLabel" text="Rezultat Shunting-Yard Alg:" />

    <TextArea fx:id="consoleOutputArea" prefHeight="200" prefWidth="300" />
</VBox>
